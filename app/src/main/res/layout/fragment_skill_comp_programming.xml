<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   tools:context=".SkillCompProgrammingFragment">

    <ScrollView

            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="26dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                    android:id="@+id/textIntroCP"
                    android:layout_width="343dp"
                    android:layout_height="103dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="Computer programming is a crucial hard skill that empowers individuals to solve problems, automate tasks, and drive innovation across various industries, from technology to business and science."

                    tools:ignore="MissingConstraints"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:id="@+id/textCp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INTRODUCTION TO COMPUTER PROGRAMMING"
                    android:fontFamily="@font/inter_bold"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textIntroCP" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.153"/>
            <WebView
                    android:id="@+id/cp_vid1"
                    android:layout_width="368dp"
                    android:layout_height="208dp"
                    app:layout_constraintEnd_toEndOf="@+id/textIntroCP"
                    app:layout_constraintStart_toStartOf="@+id/textIntroCP"
                    app:layout_constraintTop_toBottomOf="@+id/textCp1" android:layout_marginTop="8dp"
                    app:layout_constraintHorizontal_bias="0.488"/>
            <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Mark as done"
                    android:theme="@style/colored_checkBox"
                    app:layout_constraintEnd_toEndOf="@+id/cp_vid1"
                    app:layout_constraintTop_toBottomOf="@+id/cp_vid1" />

            <TextView
                    android:id="@+id/textCp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="HISTORY OF COMPUTER PROGRAMMING"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintStart_toStartOf="@+id/textCp1"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox" />

            <WebView
                    android:id="@+id/cp_vid2"
                    android:layout_width="368dp"
                    android:layout_height="208dp"
                    app:layout_constraintEnd_toEndOf="@+id/cp_vid1"
                    app:layout_constraintStart_toStartOf="@+id/cp_vid1"
                    app:layout_constraintTop_toBottomOf="@+id/textCp2" />

            <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Mark as done"
                    android:theme="@style/colored_checkBox"
                    app:layout_constraintEnd_toEndOf="@+id/cp_vid2"
                    app:layout_constraintTop_toBottomOf="@+id/cp_vid2" />

            <TextView
                    android:id="@+id/textCp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="OBJECT-ORIENTED PROGRAMMING"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintStart_toStartOf="@+id/textCp2"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

            <WebView
                    android:id="@+id/cp_vid3"
                    android:layout_width="368dp"
                    android:layout_height="208dp"
                    app:layout_constraintEnd_toEndOf="@+id/cp_vid2"
                    app:layout_constraintStart_toStartOf="@+id/cp_vid2"
                    app:layout_constraintTop_toBottomOf="@+id/textCp3" />

            <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Mark as done"
                    android:theme="@style/colored_checkBox"
                    app:layout_constraintEnd_toEndOf="@+id/cp_vid3"
                    app:layout_constraintTop_toBottomOf="@+id/cp_vid3" />

            <TextView
                    android:id="@+id/textCp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="DATA STRUCTURES"
                    android:fontFamily="@font/inter_bold"
                    app:layout_constraintStart_toStartOf="@+id/textCp3"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

            <WebView
                    android:id="@+id/cp_vid4"
                    android:layout_width="368dp"
                    android:layout_height="208dp"
                    app:layout_constraintEnd_toEndOf="@+id/cp_vid3"
                    app:layout_constraintStart_toStartOf="@+id/cp_vid3"
                    app:layout_constraintTop_toBottomOf="@+id/textCp4" />

            <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="100dp"
                    android:text="Mark as done"
                    android:theme="@style/colored_checkBox"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/cp_vid4"
                    app:layout_constraintTop_toBottomOf="@+id/cp_vid4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>