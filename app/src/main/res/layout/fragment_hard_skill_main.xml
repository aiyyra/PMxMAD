<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".HardSkillMainFragment"
            android:fillViewport="true">

<!--    TODO: Update blank fragment layout-->
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:backgroundTint="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="399dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                app:layout_constraintVertical_bias="1.0">

            <TextView
                    android:id="@+id/textIntroHardSkill"
                    android:layout_width="343dp"
                    android:layout_height="111dp"
                    android:layout_marginTop="28dp"
                    android:text="Welcome to our Hard Skills Training section, where you'll find a wealth of valuable resources to boost your proficiency in a wide range of practical skills.\n\nDive in, learn, and watch your hard skills soar!"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/inter_medium"/>
            <ImageButton
                    app:srcCompat="@drawable/com_programming"
                    android:backgroundTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="150sp" android:id="@+id/btnComputerProg"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.509" android:layout_marginTop="42dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnDataAnalysis" tools:ignore="ContentDescription"/>
            <ImageButton
                    app:srcCompat="@drawable/data_analyst"
                    android:backgroundTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="150sp" android:id="@+id/btnDataAnalysis"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.49" android:layout_marginTop="39dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnProjectManagement" tools:ignore="ContentDescription"/>
            <ImageButton
                    app:srcCompat="@drawable/project_manage"
                    android:backgroundTint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="150sp" android:id="@+id/btnProjectManagement"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.49" android:layout_marginTop="37dp"
                    app:layout_constraintTop_toBottomOf="@+id/textIntroHardSkill" tools:ignore="ContentDescription"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</ScrollView>