<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkillsPage">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="411dp"
        android:layout_height="73dp"
        android:background="@drawable/mainpage_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button3"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Back"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard Skills"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:background="@drawable/mainpage_footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:contentDescription="Button"
            android:src="@android:drawable/btn_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:contentDescription="Button"
            android:src="@android:drawable/btn_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton6"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:contentDescription="Button"
            android:src="@android:drawable/btn_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton8"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star"
            android:contentDescription="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toEndOf="@+id/imageButton7"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintVertical_bias="1.0">





        <TextView
            android:id="@+id/textIntroHardSkill"
            android:layout_width="343dp"
            android:layout_height="111dp"
            android:layout_marginTop="16dp"
            android:text="Welcome to our Hard Skills Training section, where you'll find a wealth of valuable resources to boost your proficiency in a wide range of practical skills.\n\nDive in, learn, and watch your hard skills soar!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pic_cp"
            android:layout_width="320dp"
            android:layout_height="119dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/cp"
            app:layout_constraintEnd_toEndOf="@+id/textIntroHardSkill"
            app:layout_constraintStart_toStartOf="@+id/textIntroHardSkill"
            app:layout_constraintTop_toBottomOf="@+id/textIntroHardSkill"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pic_da"
            android:layout_width="320dp"
            android:layout_height="119dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/da"
            app:layout_constraintEnd_toEndOf="@+id/pic_cp"
            app:layout_constraintTop_toBottomOf="@+id/pic_cp"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/pic_pm"
            android:layout_width="320dp"
            android:layout_height="119dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/pm"
            app:layout_constraintEnd_toEndOf="@+id/pic_da"
            app:layout_constraintTop_toBottomOf="@+id/pic_da"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/roundRectangle"
            android:layout_width="wrap_content"
            android:layout_height="119dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Enter Computer Programming Section"
            android:adjustViewBounds="true"
            android:alpha=".65"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="computerProgramming"
            android:scaleType="fitCenter"
            android:src="@drawable/red_rectangle"
            app:layout_constraintEnd_toEndOf="@+id/textIntroHardSkill"
            app:layout_constraintStart_toStartOf="@+id/textIntroHardSkill"
            app:layout_constraintTop_toBottomOf="@+id/textIntroHardSkill"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/roundRectangle2"
            android:layout_width="320dp"
            android:layout_height="119dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="Enter Data Analysis Section"
            android:alpha=".65"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="dataAnalysis"
            android:scaleType="fitCenter"
            android:src="@drawable/red_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pic_cp"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/roundRectangle3"
            android:layout_width="320dp"
            android:layout_height="119dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="Enter Project Management Section"
            android:alpha=".65"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="projectManagement"
            android:scaleType="fitCenter"
            android:src="@drawable/red_rectangle"
            app:layout_constraintEnd_toEndOf="@+id/pic_da"
            app:layout_constraintTop_toBottomOf="@+id/pic_da"
            app:shapeAppearanceOverlay="@style/roundimageview"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textCp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPUTER PROGRAMMING"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/pic_cp"
            app:layout_constraintEnd_toEndOf="@+id/pic_cp"
            app:layout_constraintStart_toStartOf="@+id/pic_cp"
            app:layout_constraintTop_toTopOf="@+id/pic_cp" />

        <TextView
            android:id="@+id/textDs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA ANALYSIS"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/pic_da"
            app:layout_constraintEnd_toEndOf="@+id/pic_da"
            app:layout_constraintStart_toStartOf="@+id/pic_da"
            app:layout_constraintTop_toTopOf="@+id/pic_da" />

        <TextView
            android:id="@+id/textPm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROJECT MANAGEMENT"
            android:textColor="#ffffff"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/pic_pm"
            app:layout_constraintEnd_toEndOf="@+id/pic_pm"
            app:layout_constraintStart_toStartOf="@+id/pic_pm"
            app:layout_constraintTop_toTopOf="@+id/pic_pm" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>