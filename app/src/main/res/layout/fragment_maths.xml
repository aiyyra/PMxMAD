<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChemistryFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnC1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:background="#C84B31"
        android:text="Algebra"
        android:textColor="#ffffff"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnC2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnC1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:background="#C84B31"
        android:text="Plane Geometry"
        android:textColor="#ffffff"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnC3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnC2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:background="#C84B31"
        android:text="Trigonometry"
        android:textColor="#ffffff"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnC4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnC3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:background="#C84B31"
        android:text="Probability"
        android:textColor="#ffffff"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnC5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnC4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:background="#C84B31"
        android:text="Matrices"
        android:textColor="#ffffff"
        />

</androidx.constraintlayout.widget.ConstraintLayout>