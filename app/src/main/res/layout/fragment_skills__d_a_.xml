<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".skills_DA_Fragment">

    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="26dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:id="@+id/textIntroDA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/inter_medium"
                android:text="Data analysis is an essential hard skill that enables individuals to extract valuable insigths from complex datasets. It's pivotal in making informed decisions, solving problem, and driving progress in various fields."
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/textDa1"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/textDa1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="INTRODUCTION TO DATA ANALYSIS"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textIntroDA"
                />

            <WebView
                android:id="@+id/da_vid1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textDa1"
                app:layout_constraintDimensionRatio="16:9"
                />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Mark as done"
                android:theme="@style/colored_checkBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/da_vid1"/>

            <TextView
                android:id="@+id/textDa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="HOW TO LEARN DATA ANALYSIS"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintStart_toStartOf="@+id/textDa1"
                app:layout_constraintTop_toBottomOf="@+id/checkBox" />

            <WebView
                android:id="@+id/da_vid2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="@+id/da_vid1"
                app:layout_constraintStart_toStartOf="@+id/da_vid1"
                app:layout_constraintTop_toBottomOf="@+id/textDa2"
                app:layout_constraintDimensionRatio="16:9"/>

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Mark as done"
                android:theme="@style/colored_checkBox"
                app:layout_constraintEnd_toEndOf="@+id/da_vid2"
                app:layout_constraintTop_toBottomOf="@+id/da_vid2" />

            <TextView
                android:id="@+id/textDa3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="DATA ANALYSIS ESSENTIALS IN EXCEL"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintStart_toStartOf="@+id/textDa2"
                app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

            <WebView
                android:id="@+id/da_vid3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="@+id/da_vid2"
                app:layout_constraintStart_toStartOf="@+id/da_vid2"
                app:layout_constraintTop_toBottomOf="@+id/textDa3"
                app:layout_constraintDimensionRatio="16:9"/>

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Mark as done"
                android:theme="@style/colored_checkBox"
                app:layout_constraintEnd_toEndOf="@+id/da_vid3"
                app:layout_constraintTop_toBottomOf="@+id/da_vid3" />

            <TextView
                android:id="@+id/textDa4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="DANA ANALYSIS WITH PYTHON"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintStart_toStartOf="@+id/textDa3"
                app:layout_constraintTop_toBottomOf="@+id/checkBox3" />

            <WebView
                android:id="@+id/da_vid4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="@+id/da_vid3"
                app:layout_constraintStart_toStartOf="@+id/da_vid3"
                app:layout_constraintTop_toBottomOf="@+id/textDa4"
                app:layout_constraintDimensionRatio="16:9"/>

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:fontFamily="@font/inter_medium"
                android:text="Mark as done"
                android:theme="@style/colored_checkBox"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/da_vid4"
                app:layout_constraintTop_toBottomOf="@+id/da_vid4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>