<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Westudy" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <!-- for back arrow navigation color -->
        <item name="colorControlNormal">@color/white</item>

        <!-- Text appearance customization -->
        <item name="textAppearanceHeadline1">@style/TextAppearanceToolbar</item>
        <!-- Add more text appearance attributes as needed -->
    </style>
    <style name="Base.Theme.Westudy." parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Define toolbar text appearances -->
    <style name="TextAppearanceToolbar">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <!-- Add other attributes as needed for headline 1 -->
    </style>
    <!-- Define bottom bar text appearances -->
    <style name="TextAppearanceBottomBar">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <!-- Add other attributes as needed for headline 1 -->
    </style>

    <style name="Theme.Westudy" parent="Base.Theme.Westudy" />


    <style name="roundImageView" parent="">
        <item name="cornerFamily">rounded</item>    <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item></style>
</resources>